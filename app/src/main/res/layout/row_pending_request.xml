<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_5dp"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/background_layout_white_rounded"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_10dp"
            android:background="@drawable/background_layout_white_rounded"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/size_90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/gradient_purple"
                android:padding="@dimen/size_5dp"
                android:src="@drawable/onedollarlarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/h2habove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tournName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titan_one_regular"
                            android:text="Tournament Name"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/userStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game is in Progress"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15sp"
                            android:fontFamily="@font/titan_one_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vs"
                            android:textSize="@dimen/text_size_10sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular" />

                        <TextView
                            android:id="@+id/playerFound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abcd"
                            android:textSize="@dimen/text_size_10sp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular" />

                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:id="@+id/play"-->
<!--                        android:layout_width="@dimen/size_65dp"-->
<!--                        android:layout_height="@dimen/size_65dp"-->
<!--                        android:padding="@dimen/_5sdp"-->
<!--                        android:src="@drawable/play_real_time_large" />-->

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/h2habove"
                    >

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="#29DB96" />



<!--                    <TextView-->
<!--                        android:id="@+id/prize"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:text="Prize $8"-->
<!--                        android:textColor="#29DB96" />-->

                    <TextView
                        android:id="@+id/player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Player"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/entryFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Entry $9"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>






    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="No Data"
        android:layout_gravity="center"/>


</LinearLayout>