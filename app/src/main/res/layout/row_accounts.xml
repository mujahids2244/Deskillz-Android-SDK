<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:background="@drawable/background_layout_white_rounded"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:background="@drawable/ic_img_layout"
            android:src="@drawable/ic_baseline_person_24"

            />

        <LinearLayout
            android:layout_toEndOf="@id/userImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main highlited heading"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/titan_one_regular" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="CompassionCoadjutor622"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular" />



        </LinearLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:text="time"
            android:textColor="@color/red2"
            android:textSize="@dimen/text_size_15sp" />


    </RelativeLayout>






    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rankingLayout"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size_5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rowNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/black"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rankuserImg"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:background="@drawable/ic_img_layout"
            android:src="@drawable/ic_baseline_person_24"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingStart="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/rankuserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/titan_one_regular"/>

            <TextView
                android:id="@+id/rankemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Name"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/rankFlag"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:layout_margin="5dp"
            android:textSize="@dimen/text_size_15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/titan_one_regular"/>



    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="No Data"
        android:layout_gravity="center"/>


</LinearLayout>