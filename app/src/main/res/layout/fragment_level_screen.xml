<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".ui.fragment.LevelScreenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/back_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Levels"
            android:fontFamily="@font/titan_one_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#252525"
        android:layout_marginTop="@dimen/size_10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:padding="@dimen/size_10dp">

        <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100dp"
            android:alpha="0.8"
            app:backgroundColorView="@color/gray_bg_color"
            app:corners_side="1"
            app:cornersValue="@dimen/size_10dp"
            app:upper_cut_value="@dimen/size_30dp"
            app:lower_cut_value="@dimen/size_20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/size_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titan_one_regular"
                android:text="21 XP to Level 2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp" />

            <androidx.core.widget.ContentLoadingProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:max="100"
                android:progress="20"
                android:progressTint="#E33960" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="4 Total XP"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:orientation="horizontal"
        android:background="@drawable/background_layout_white_rounded">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp">

            <ImageView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/d_level_large" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/size_150dp"
                android:layout_height="@dimen/size_150dp"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/progress_design"
                android:progressTint="#D52116" />

            <RelativeLayout
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_115dp"
                android:background="@drawable/background_layout_red_cricle"
                android:backgroundTint="#D52116">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:fontFamily="@font/titan_one_regular" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskillz Level"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/titan_one_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4/25"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/greyish"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:orientation="horizontal"
        android:background="@drawable/background_layout_white_rounded"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp">

            <ImageView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bflarge" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/size_150dp"
                android:layout_height="@dimen/size_150dp"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/progress_design"
                android:progressTint="#51FCDF" />

            <RelativeLayout
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_115dp"
                android:background="@drawable/background_layout_red_cricle"
                android:backgroundTint="#51FCDF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/titan_one_regular" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battlefield 2042"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/titan_one_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/greyish"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>