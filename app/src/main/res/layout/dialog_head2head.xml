    </LinearLayout>

    <TextView
        android:id="@+id/para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/h2"
        android:layout_margin="@dimen/size_20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="If this tournament is cancelled due to a lack of participants, all entries will be cancelled and all entry fees will be fully refunded."
        android:textAlignment="center"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_20dp"
        android:fontFamily="@font/titan_one_regular"
        android:paddingStart="@dimen/size_30dp"
        android:paddingEnd="@dimen/size_30dp"
        android:text="Head to Head"
        android:textSize="@dimen/text_size_20sp" />

    <TextView
        android:id="@+id/h2"
