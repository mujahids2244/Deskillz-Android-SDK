<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.navBarFragments.CartScreenFragment"
    android:background="@drawable/splash_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:alpha="0.8"
                app:backgroundColorView="@color/blackish_bg"
                app:corners_side="1"
                app:cornersValue="@dimen/size_20dp"
                app:upper_cut_value="@dimen/size_30dp"
                app:lower_cut_value="@dimen/size_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_10dp"
                android:paddingStart="@dimen/size_20dp"
                android:paddingEnd="@dimen/size_20dp"
                android:paddingTop="@dimen/size_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:text="Choose your deposit amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$20"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_layout_cart_text"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="$25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/background_layout_white_rounded"
                    android:backgroundTint="#696770"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Promo Code Image"
                        android:src="@drawable/cart_promo_code_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/titan_one_regular"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="Enter Promo Code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginTop="@dimen/size_20dp">

            <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundColorView="@color/white"
                app:corners_side="1"
                app:cornersValue="@dimen/size_10dp"
                app:upper_cut_value="@dimen/size_20dp"
                app:lower_cut_value="@dimen/size_10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/titan_one_regular"
                android:gravity="center"
                android:text="Invite Friends and Get a $15 Cash Bonus"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_15sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1">

                <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:corners_side="1"
                    app:apply_gradient="1"
                    app:gradient1="@color/green1"
                    app:gradient2="@color/green2"
                    app:cornersValue="@dimen/size_20dp"
                    app:upper_cut_value="@dimen/size_30dp"
                    app:lower_cut_value="@dimen/size_20dp"/>

                <ImageView
                    android:id="@+id/cartLoginBonusImage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_50dp"
                    android:src="@drawable/cart_gift_icon"
                    app:layout_constraintEnd_toEndOf="@+id/guidelineBonus3"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="@+id/guideline1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:gravity="center"
                    android:text="Login \nBonus"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cartLoginBonusImage" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineBonus3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/claimTokenLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_weight="1">

                <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:corners_side="1"
                    app:apply_gradient="1"
                    app:gradient1="@color/red1"
                    app:gradient2="@color/red2"
                    app:cornersValue="@dimen/size_20dp"
                    app:upper_cut_value="@dimen/size_30dp"
                    app:lower_cut_value="@dimen/size_20dp"/>

                <ImageView
                    android:id="@+id/cartFreeTokenImage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_50dp"
                    android:src="@drawable/coin_medium"
                    app:layout_constraintEnd_toEndOf="@+id/guidelineToken3"
                    app:layout_constraintStart_toStartOf="@+id/guidelineToken2"
                    app:layout_constraintTop_toTopOf="@+id/guidelineToken1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:gravity="center"
                    android:text="Claim Free \nToken"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cartFreeTokenImage" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineToken1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineToken2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineToken3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trophyLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_weight="1">

                <com.arhamsoft.deskilz.ui.backGroundLayout.BackGroundLayoutView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:corners_side="1"
                    app:apply_gradient="1"
                    app:gradient1="@color/blue1"
                    app:gradient2="@color/blue2"
                    app:cornersValue="@dimen/size_20dp"
                    app:upper_cut_value="@dimen/size_30dp"
                    app:lower_cut_value="@dimen/size_20dp"/>

                <ImageView
                    android:id="@+id/cartTrophyImage"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_50dp"
                    android:src="@drawable/cart_trophy_icon"
                    app:layout_constraintEnd_toEndOf="@+id/guidelineTrophy3"
                    app:layout_constraintStart_toStartOf="@+id/guidelineTrophy2"
                    app:layout_constraintTop_toTopOf="@+id/guidelineTrophy1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:gravity="center"
                    android:text="Trophies"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cartTrophyImage" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineTrophy1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineTrophy2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineTrophy3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:gravity="center"
                    android:padding="@dimen/size_10dp"
                    android:text="Deskillz Rewards"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/size_10dp"
                    android:text="See More"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/adapter_cart_skill_rewards"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>