<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10dp"
    android:layout_margin="@dimen/size_10dp"
    android:background="@drawable/background_layout_white_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win 3 practice tournaments."
                android:textColor="@color/black"
                android:fontFamily="@font/titan_one_regular"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Win 3 practice tournaments."
                android:textColor="@color/gray_text"
                android:layout_marginTop="@dimen/size_10dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@drawable/cart_gift_icon"
            android:layout_marginStart="@dimen/size_30dp"/>

    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10dp"
        android:max="100"
        android:progress="20" />

</LinearLayout>