<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_layout_white_rounded"
    android:orientation="horizontal"
    android:padding="@dimen/size_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/background_layout_white_rounded"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/d_level_large" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/size_150dp"
            android:layout_height="@dimen/size_150dp"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/progress_design" />

        <RelativeLayout
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_115dp"
            android:background="@drawable/background_layout_red_cricle"
            android:backgroundTint="#D52116">


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>