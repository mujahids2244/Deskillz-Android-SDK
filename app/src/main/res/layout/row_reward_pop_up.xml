<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:background="@drawable/background_layout_white_rounded">

    <ImageView
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_margin="@dimen/size_10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginBottom="@dimen/size_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MATCH COMPLETED"
            android:textColor="@color/black"
            android:layout_margin="@dimen/size_5dp"
            android:textSize="@dimen/text_size_15sp"
            android:fontFamily="@font/titan_one_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VS."
            android:layout_margin="@dimen/size_5dp"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CompassionCoadjutor622"
            android:layout_margin="@dimen/size_5dp"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/poppins_regular"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_margin="@dimen/size_10dp"
        android:layout_gravity="center"
        android:src="@drawable/reward_gift_icon"/>

</LinearLayout>