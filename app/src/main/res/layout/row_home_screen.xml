<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_5dp"
    >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:background="@drawable/background_layout_white_rounded"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/matchImg"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:src="@drawable/bflarge"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/background_layout_white_rounded"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU LOST"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/titan_one_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs."
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/oppoenetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="CompassionCoadjutor622"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/poppins_regular" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyish"
        android:layout_marginTop="@dimen/size_5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_5dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Time: 2 days ago"
            android:layout_weight="1"
            android:paddingStart="@dimen/size_10dp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry Fee:"
            android:layout_marginEnd="@dimen/size_5dp"
            android:fontFamily="@font/poppins_regular"/>

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@drawable/d_level_large"
            android:background="@drawable/background_layout_red_cricle"/>

        <TextView
            android:id="@+id/entryFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_5dp"
            android:text="5"
            android:layout_marginEnd="@dimen/size_10dp"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="No Data"
        android:layout_gravity="center"/>


</LinearLayout>