<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".ui.fragment.DeskillzNewFragment">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_marginStart="@dimen/size_10dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/back_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/titan_one_regular"
            android:text="DeSkillz News"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="April 06, 2022"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/size_20dp"
        android:layout_margin="@dimen/size_20dp"
        android:background="@drawable/background_layout_white_rounded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:src="@drawable/icon_metro_user"
                android:layout_margin="@dimen/size_10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We're Pulling an All Nighter!"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/titan_one_regular"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            android:background="@drawable/news_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We're celebrating National Pillow Fight Day with the Pillow Fight Live Event! Like birds of a feather, you and cash prizes ought to stick together."
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp"
            android:layout_margin="@dimen/size_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't hit snooze! Play now until 10pm PDT tonight!"
            android:layout_marginStart="@dimen/size_10dp"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/size_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/size_10dp"
                android:background="@color/greyish"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30dp"
                android:background="@drawable/button_bg_blue"
                android:text="Play To Win"
                android:textColor="@color/white"
                android:fontFamily="@font/titan_one_regular"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/greyish"
                android:layout_margin="@dimen/size_10dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>