<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splashbg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SignUp">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/backtoaccount"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_baseline_kbackarrow" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toRightOf="@id/backtoaccount"
            android:fontFamily="@font/titan_one_regular"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />


        <ImageView
            android:id="@+id/poweredLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/poweredlogo" />


    </RelativeLayout>

    <View
        android:id="@+id/break_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/top"
        android:background="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/deskillzlarge"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Your  Account"
            android:textColor="@color/white"
            android:fontFamily="@font/titan_one_regular"
            android:textSize="@dimen/_15sdp"/>



        <TextView
            android:layout_marginTop="@dimen/_15sdp"
            android:alpha=".6"
            android:layout_width="@dimen/_280sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="To Compete for cool prizes, contact our support team, and access great customer rewards, please save your account"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"

            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:hint="Enter Your Email"
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/edit_text_deisgn"
            android:alpha=".6"

            />



        <EditText
            android:id="@+id/password"
            android:alpha=".6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:hint="Enter Your Password"
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/edit_text_deisgn"
            />



        <EditText
            android:id="@+id/repassword"
            android:alpha=".6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:hint="        Re-enter Your Password
"
            android:paddingStart="@dimen/_10sdp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/edit_text_deisgn"
            />





            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:gravity="top"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="I consent to being contacted by Skkilz and its prize partner about Skillz andits prize partner products,offers and specials events."
                />




        <RelativeLayout
            android:layout_marginTop="@dimen/_40sdp"
            android:id="@+id/playnow"
            android:layout_gravity="center"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/playnowbtn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/titan_one_regular"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />




        </RelativeLayout>


        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:alpha=".5"
            android:text="Forget Username/Password "
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_regular"
            />





    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Existing User? Sign In."
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        />




</LinearLayout>